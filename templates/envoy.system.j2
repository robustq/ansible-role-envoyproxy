# {{ ansible_managed }}

[Unit]
Description=Envoy Proxy

[Service]
User={{ envoy_system_user }}
Group={{ envoy_system_user }}
ExecStart=/usr/bin/envoy --base-id 1 -c /etc/envoy/envoy.yaml
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -TERM $MAINPID
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target
